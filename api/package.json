{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typeorm": "ts-node ./node_modules/.bin/typeorm"
  },
  "dependencies": {
    "@nestjs/common": "^7.2.0",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.2.0",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.2.0",
    "@nestjs/typeorm": "^7.1.0",
    "@types/nodemailer": "^6.4.0",
    "aws-sdk": "^2.701.0",
    "bcryptjs": "^2.4.3",
    "casbin": "^5.0.4",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.2",
    "deep-diff": "^1.0.2",
    "faker": "^4.1.0",
    "handlebars": "^4.7.6",
    "moment": "^2.27.0",
    "mysql": "^2.18.1",
    "nodemailer": "^6.4.10",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "query-string": "^6.13.1",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.5",
    "sharp": "^0.25.4",
    "typeorm": "^0.2.25",
    "typeorm-naming-strategies": "^1.1.0",
    "ua-parser-js": "^0.7.21"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.4.0",
    "@nestjs/schematics": "^7.0.1",
    "@nestjs/testing": "^7.2.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.6",
    "@types/faker": "^4.1.12",
    "@types/jest": "26.0.0",
    "@types/supertest": "^2.0.9",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "26.1.0",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@core/auth/(.*)": "<rootDir>/libs/auth/src/$1",
      "@core/auth": "<rootDir>/libs/auth/src",
      "@core/access-control/(.*)": "<rootDir>/libs/access-control/src/$1",
      "@core/access-control": "<rootDir>/libs/access-control/src",
      "@core/common/(.*)": "<rootDir>/libs/common/src/$1",
      "@core/common": "<rootDir>/libs/common/src",
      "@core/mail/(.*)": "<rootDir>/libs/mail/src/$1",
      "@core/mail": "<rootDir>/libs/mail/src",
      "@core/db/(.*)": "<rootDir>/libs/db/src/$1",
      "@core/db": "<rootDir>/libs/db/src",
      "@core/activity-log/(.*)": "<rootDir>/libs/activity-log/src/$1",
      "@core/activity-log": "<rootDir>/libs/activity-log/src",
      "@core/storage/(.*)": "<rootDir>/libs/storage/src/$1",
      "@core/storage": "<rootDir>/libs/storage/src"
    }
  }
}
